{
  "name": "apply-juggling-license",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon /app/server",
    "format": "prettier . --write",
    "lint:css": "stylelint 'app/**/*.css'",
    "lint:js": "eslint .",
    "lint": "npm run lint:css && npm run lint:js",
    "start": "node app/server",
    "test": "playwright test --ui",
    "typecheck:client": "tsc -p app/client/jsconfig.json",
    "typecheck:server": "tsc -p app/server/jsconfig.json",
    "typecheck:tests": "tsc --p tests/tsconfig.json --noEmit",
    "typecheck": "npm run typecheck:client && npm run typecheck:server",
    "validate": "npm run lint && npm run typecheck"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@types/nunjucks": "^3.2.6",
    "body-parser": "^1.20.3",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "date-fns": "^4.1.0",
    "debug": "^4.4.1",
    "express": "^4.21.2",
    "express-prom-bundle": "^8.0.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "govuk-frontend": "^5.10.2",
    "govuk-markdown": "^0.8.0",
    "helmet": "^8.1.0",
    "htmx.org": "^2.0.4",
    "http-errors": "^2.0.0",
    "marked": "^15.0.12",
    "morgan": "^1.10.0",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.28.0",
    "@playwright/test": "^1.53.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@tsconfig/recommended": "^1.0.8",
    "@types/express": "^5.0.3",
    "@types/govuk-frontend": "^5.9.0",
    "@types/node": "^22.13.14",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "nodemon": "^3.1.10",
    "prettier": "3.5.3",
    "stylelint": "^16.20.0",
    "stylelint-config-gds": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "stylelint": {
    "extends": "stylelint-config-gds/css"
  }
}
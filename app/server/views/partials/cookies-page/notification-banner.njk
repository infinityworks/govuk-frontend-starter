{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% set html %}
  <p class="govuk-notification-banner__heading">
    You've set your cookie preferences. <a class="govuk-notification-banner__link" href="#" onclick="history.back(); return false;">Go back to the page you were looking at</a>.
  </p>
{% endset %}

{{ govukNotificationBanner({
  type: "success",
  html: html
}) }}

<script
  defer
  type="module"
  nonce="{{ cspNonce }}"
  src="/assets/scripts/modules/notification-banner.mjs?v={{ config.app.version }}">
</script>
